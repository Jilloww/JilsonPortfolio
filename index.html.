<script>
  const scriptURL = '<https://script.google.com/macros/s/AKfycbw70x7LT2Kjsy_ywiFNyl15SKDzrRoTuk6D2kMTrFsSh-V5HLoG3oslZtmJzO_guikO/exec>'
  const form = document.forms['submit-to-google-sheet']
  const msg = document.getElementById("msg")

  form.addEventListener('submit', e => {
    e.preventDefault()
    fetch(scriptURL, { method: 'POST', body: new FormData(form)})
      .then(response => {
        msg.innerHTML= "Je bericht is succesvol verzonden"
        setTimeout(function(){
          msg.innerHTML=""

        },5000)
        form.reset()
      })
      .catch(error => console.error('Error!', error.message))
  })
